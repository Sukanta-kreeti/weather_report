<hr />
<div class="panel panel-primary">
  <div class="panel-heading">Weekly Report</div>
  <div class="panel-body">
    <div class="alert alert-warning">
      <strong>Summary: </strong> <%= forecast.daily.summary %>
    </div>
    <% forecast.daily.data.each do |day| %>
    <%= link_to "javascript:void(0);", class: "weekly-report", data: { href: graph_path(date: Time.at(day.time)).to_s } do %>
      <div class="col-md-3 col-sm-3 col-xs-6">
        <div class="text-center"><%= convert_unix_time_to_date_format(day.time) %></div>
        <div>
          <div class="col-md-6 col-sm-6 col-xs-6 alert alert-info text-center">
            <i class="fa fa-desktop fa-5x"></i>
            <h3><%= day.temperatureMin %><sup>o</sup>C </h3>
            Min.
          </div>
          <div class="col-md-6 col-sm-6 col-xs-6 alert alert-info text-center">
            <i class="fa fa-desktop fa-5x"></i>
            <h3><%= day.temperatureMax %><sup>o</sup>C </h3>
            Max.
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<hr />
